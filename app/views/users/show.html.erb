<div class="right">
<% if user_signed_in? %>
<%= render 'shared/follow_form' , user: @user%>
<% end %>
</div>
<%= image_tag @user.avatar.url(:thumb), class: 'profile' %>
<span class="left">
<h4><%= @user.name %></h4>
<h5><%= "Interests: " %></h5><%= @user.interests %> 
<h5><%= "Quotes: " %></h5><%= @user.quotes %>
<h5><%= "Last Name: " %></h5><%= @user.last_name %>
</span>
<div class="row feed ">
<% @activities.each do |activity| %>
    <%= render_activity(activity) %>
<% end %>
</div>
